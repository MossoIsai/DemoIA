<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/imageMovie"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/tituloMovie"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageMovie"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/imageMovie"
                android:layout_toRightOf="@+id/imageMovie"
                android:text="Buscando a Dory"
                android:textColor="@color/blanco"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:padding="2dp"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/tituloMovie"
                android:layout_alignLeft="@+id/tituloMovie"
                android:layout_alignRight="@+id/tituloMovie"
                android:layout_alignStart="@+id/tituloMovie"
                android:layout_below="@+id/tituloMovie" >

                <TextView
                    android:textSize="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/blanco"
                    android:text="Platino"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/blanco"
                    android:text="B15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/blanco"
                    android:text="InglÃ©s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <GridView
                android:id="@+id/gridHorarioMovie"
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:layout_alignLeft="@+id/tituloMovie"
                android:layout_alignStart="@+id/tituloMovie"
                android:layout_below="@+id/tituloMovie"
                android:layout_marginTop="22dp"
                android:background="@android:color/transparent"
                android:horizontalSpacing="2dp"
                android:numColumns="3"
                android:paddingStart="5dp"
                android:verticalSpacing="2dp"
                android:paddingLeft="5dp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>